<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Map4RDF</display-name>
    <sessions-enabled>true</sessions-enabled>
    <async-session-persistence enabled="true" />

    <servlet>
        <servlet-name>SessionsServiceServlet</servlet-name>
        <servlet-class>es.upm.fi.dia.oeg.map4rdf.server.servlet.SessionsServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBServiceServlet</servlet-name>
        <url-pattern>/es.upm.fi.dia.oeg.map4rdf.map4rdf/db</url-pattern>
    </servlet-mapping>
        <servlet>
        <servlet-name>DBServiceServlet</servlet-name>
        <servlet-class>es.upm.fi.dia.oeg.map4rdf.server.servlet.DBServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionsServiceServlet</servlet-name>
        <url-pattern>/es.upm.fi.dia.oeg.map4rdf.map4rdf/sessions</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <sessions-enabled>true</sessions-enabled>
  
    <filter>
        <filter-name>guiceFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>guiceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

   <!-- Bootstrapping -->
    <listener>
        <listener-class>es.upm.fi.dia.oeg.map4rdf.server.bootstrap.Bootstrapper</listener-class>
    </listener>

    </web-app>
